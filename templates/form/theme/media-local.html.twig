{% block LocalType_widget %}

    <!-- Local collection -->
    <tr class="media-local">
        <!-- Display image -->
        <td>
            <!-- If edit -->
            {% if form.vars.value.extension is not null %}
                <img src="{{ form.vars.value.src }}" alt="{{ form.vars.value.alt }}">
            <!-- If create -->
            {% else %}
                <img src="/img/picto/delete.png" alt="">
            {% endif %}
        </td>

        <!-- Media name -->
        <td class="local-name-inputs">
            {% if form_errors(form.name) %}
                <span class="error-form">{{ form_errors(form.name) }}</span>
            {% endif %}
            {{ form_widget(form.name) }}
        </td>

        <!-- Media Description -->
        <td>
            {% if form_errors(form.alt) %}
                <span class="error-form">{{ form_errors(form.alt) }}</span>
            {% endif %}
            {{ form_widget(form.alt) }}
        </td>

        <!-- Media File -->
        <td class="local-file-input">
            {% if form_errors(form.file) %}
                <span class="error-form">{{ form_errors(form.file) }}</span>
            {% endif %}
            {{ form_widget(form.file) }}
        </td>

        <td>{{ form_widget(form.position) }}</td>
    </tr>

{% endblock %}
