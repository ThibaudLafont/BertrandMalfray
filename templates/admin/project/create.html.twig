{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Slick stylesheets -->
    <link rel="stylesheet" href="/vendor/slick/slick.css">
    <link rel="stylesheet" href="/vendor/slick/slick-theme.css">
{% endblock %}

{% block body %}

    {% form_theme form
        'form_table_layout.html.twig'
        'form/theme/project.html.twig'
        'jquery.collection.html.twig'
    %}
    {{ form(form) }}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.collection.js') }}"></script>

    <script type="text/javascript">
        $('.skill-collection').collection({
            min: 0,
            position_field_selector: '.skill-position',
            allow_remove: true,
            elements_selector: '> tr'
        });
        $('.local-collection').collection({
            min: 0,
            position_field_selector: '.local-position',
            allow_remove: true,
            elements_selector: '> tr'
        });
        $('.distant-collection').collection({
            min: 0,
            position_field_selector: '.distant-position',
            allow_remove: true,
            elements_selector: '> tr'
        });
    </script>

    <!-- Slick js -->
    <script type="text/javascript" src="/vendor/slick/slick.min.js"></script>

    <!-- Config -->
    <script type="text/javascript" src="/js/show-project-gallery.js"></script>
{% endblock %}
