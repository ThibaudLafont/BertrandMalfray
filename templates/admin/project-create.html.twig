{% extends 'base.html.twig' %}

{% block body %}

    {% form_theme form
        'form_table_layout.html.twig'
        'project/form/project-skill-theme.html.twig'
        'jquery.collection.html.twig'
    %}
    {{ form(form) }}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.collection.js') }}"></script>

    <script type="text/javascript">
        $('.skill-collection').collection({
            min: 0,
            position_field_selector: '.skill-position',
            allow_remove: true,
            elements_selector: '> tr'
        });
        $('.local-collection').collection({
            min: 0,
            position_field_selector: '.local-position',
            allow_remove: true,
            elements_selector: '> tr'
        });
        $('.distant-collection').collection({
            min: 0,
            position_field_selector: '.distant-position',
            allow_remove: true,
            elements_selector: '> tr'
        });
    </script>
{% endblock %}